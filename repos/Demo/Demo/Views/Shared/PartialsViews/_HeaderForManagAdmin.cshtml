@inject IHttpContextAccessor Accessor
@{
    var hospitalId = @Accessor.HttpContext.Session.GetInt32("ManagementAdminId");
    
}
<style>
    .nolink{
        margin-right: 10px;
        text-decoration: none;
        color: black;
    }
</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
        <!-- Left-aligned links -->
        <ul class="navbar-nav">
            @if (User.IsInRole("ManagementAdmin"))
            {
                <li class="nav-item mb-2">
                <a class="nav-link" asp-route-hospitalId="@hospitalId" asp-area="Management" asp-action="DisplayDoctor" asp-controller="Management" style="text-decoration: none; color: black;">Doctor Details</a>
                </li>
                <li class="nav-item mb-2">
                <a class="nav-link" asp-route-hospitalId="@hospitalId   " asp-area="Management" asp-action="Appoinments" asp-controller="Management" style="text-decoration: none; color: black;">Appointment Details</a>
                </li>
            }
            else if (User.IsInRole("SuperAdmin"))
            {
                 <li class="nav-item mb-2">
                <a class="nav-link"  asp-area="Management" asp-action="DisplayDoctor" asp-controller="Management" style="text-decoration: none; color: black;">Doctor Details</a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link"   asp-area="Management" asp-action="Appoinments" asp-controller="Management" style="text-decoration: none; color: black;">Appointment Details</a>
            </li>
            }
           
            @if (User.IsInRole("SuperAdmin"))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false" style="text-decoration: none; color: black;">Managements</a>
                    <ul class="dropdown-menu">
                        <li> <a class="nav-link" asp-area="SuperAdmin" asp-action="Managements" asp-controller="SuperAdmin" style="text-decoration: none; color: black;">Add hospital admin</a></li>
                        <li> <a class="nav-link" asp-area="SuperAdmin" asp-action="ManagementDetails" asp-controller="SuperAdmin" style="text-decoration: none; color: black;">ManagementDetails</a></li>

                    </ul>
                </li>
            }
        </ul>

        <!-- Right-aligned username and image -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">

            </li>
            @if (User.IsInRole("ManagementAdmin"))
            {
                string username = @Accessor.HttpContext.Session.GetString("ManagementAdminName").ToString();
                string userId = @Accessor.HttpContext.Session.GetInt32("ManagementForStatus").ToString();
                <li class="nav-item">
                <a class="nolink" asp-route-userId = "@userId" asp-area="User" asp-action="UserProfile" asp-controller="User" >@username</a>
                </li>
            }
            else if (User.IsInRole("SuperAdmin"))
            {
                 string username = @Accessor.HttpContext.Session.GetString("SuperAdminName").ToString();
                 string userId = @Accessor.HttpContext.Session.GetInt32("SuperAdminId").ToString();
                <li class="nav-item">
                <a  class="nolink" asp-route-userId = "@userId" asp-area="User" asp-action="UserProfile" asp-controller="User" >@username</a>
                </li>
            }
            <li class="nav-item">
                <a  asp-area="Login" asp-action="Logout" asp-controller="Login" class="btn btn-primary btn-sm">Logout</a>
            </li>
        </ul>

    </div>
</nav>